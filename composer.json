{
    "name": "tsiura/promise-watcher",
    "description": "A PHP library for asynchronous, promise-based object watching",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Yevhenii Tsiura",
            "email": "tsura.evgeniy@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "react/promise": "^3.2",
        "psr/log": "^3.0",
        "react/event-loop": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": "^5.24",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Tsiura\\PromiseWatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
