{
    "name": "tsiura/promise-watcher",
    "description": "A PHP library for asynchronous, promise-based object watching",
    "authors": [
        {
            "name": "Yevhenii Tsiura",
            "email": "tsura.evgeniy@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "react/promise": "^2.9",
        "psr/log": "^3.0",
        "react/event-loop": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.9",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Tsiura\\PromiseWatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
